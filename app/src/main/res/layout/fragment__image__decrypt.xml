<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Imagecrypt">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/selectimgd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksandmedium"
            android:text="Select Image"
            android:textColor="@color/teal_700"
            android:textSize="24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/frame"
            android:layout_marginTop="70dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="textStart"
                android:id="@+id/fileNameD"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/show"/>




            <ImageView
                android:layout_width="30dp"
                android:id="@+id/selectIMAGED"
                android:layout_gravity="right"

                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_attach_file_24" />


        </FrameLayout>

        <!-- <Button
             android:id="@+id/imgencrypt"
             android:layout_width="150dp"
             android:layout_height="55dp"
             android:layout_below="@id/frame"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:text="Encrypt"
             android:textSize="16dp" />-->


        <TextView
            android:id="@+id/encryptimgD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksandmedium"
            android:text="Photo"
            android:textColor="@color/teal_700"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/encryptedimgD"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/encryptimgD"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/show"
            android:padding="10dp" />


        <Button
            android:id="@+id/copyimgD"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@id/encryptedimgD"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Copy"
            android:textSize="16dp" />






    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->

</FrameLayout>